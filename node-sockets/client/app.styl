
@import "http://fonts.googleapis.com/css?family=Quicksand:400,700,300|Oswald:400,300,700.css"

body, html
	height 100%

body.body
	font normal 1em sans-serif
	background:#FFF url(/assets/img/debut_light.png)
	overflow-x: hidden
	overflow-y: auto

.strong
	font-weight:bold
	
a
	color: #49AFCD
	text-decoration:none
		
button#feedback
	position: fixed
	bottom:-4px
	left:20px
	z-index:5000
	line-height:1
			
p.credit
	position: fixed
	bottom:-4px
	right:20px
	text-align:right
	z-index:5000
	line-height:1
	font-style:italic;
	
	img
		opacity:0.7;
		
div#mc_embed_signup
	position:absolute
	top:550px
	left:50%
	margin-left:-140px
	
	.emailForm
		margin: auto auto
		width:290px
		
form#payment-form
	.payment-errors:empty
		display:none
		
	.row
		margin-left:0

.top
	background:#49afcd
	color:#FFF
	text-align:center
	display:block
	width:auto
	height:320px
	border-bottom:solid 1px #DDD
	box-shadow: inset 0 -1px 1px #FFF
	
	h1
		position:relative
		line-height:55px
		font-weight:normal
		font-size:60px
		text-transform:uppercase
		font-family: 'Quicksand', sans-serif
		padding-top:50px
		margin:20px 20px 0 20px
		color:#FFF
		
		span.note
			font-size:14px
			margin: 0 6px
			color:#1b3e49
	
	p.instructions
		font-family:'Oswald',Arial,Helvetica,sans-serif
		margin: 0
		padding: 0
		font-size:18px
		line-height:25px
		font-weight:300
		color:#1b3e49
			
		span.phone
			letter-spacing:+1px
			
		span
			// display:block
			
		

.bottom	
	color:#1b3e49
	text-align:center
	display:block
	width:auto
	height:auto
	
	.description
		font-family:'Oswald',Arial,Helvetica,sans-serif
	
	h4.description
		text-transform: uppercase
		font-size:20px
	
	p.description
		margin: 10px auto
		padding: 0
		font-size:18px
		line-height:25px
		font-weight:300
		color:#1b3e49
		width:500px
		overflow:hidden
		
		span
			display:block
		
		span:last-of-type
			margin-top:20px
			font-size:16px
	
	div#player
		position:relative
		top:-140px
		display:block
		width: 550px
		height:228px
		margin: auto auto -120px auto
		background:#EEE
		border:solid 5px #FFF
		
		div.audiojs
			width:100%
			font-family: sans-serif
			background: url(/assets/img/debut_light.png)
			box-shadow: 0 1px 4px rgba(0,0,0,.2)
				
			.play, .pause, .loading, .error
				background-image:url(/assets/img/player-graphics-light.gif)
			
			div.time
				float:right
				border-left: solid 1px #DDD
				color:#CCC
				
				em
					color:#AAA
				
			div.play-pause
				border-right: solid 1px #DDD
				
			div.scrubber
				width:auto
				position:absolute
				left:40px
				right:105px
				cursor:default
				background:#DDD
				border-top:solid 1px #999
				
				div.loaded
					background-image:none
					background:#CCC
				
				div.progress
					background-image:none
					background:#49AFCD
		
		ul#tracks:empty
			display:block
			width:auto
			height:auto
			position: absolute
			top: 53px
			right: 13px
			bottom: 20px
			left: 13px
			background:transparent
			border: dashed 6px #CCC
			border-radius: 10px
			
		ul#tracks:empty::before
			content: '\266B'
			font-size: 100px
			font-weight:bold
			color:#DDD
			text-shadow:-1px -1px #AAA
			margin:auto auto
			position:relative
			top:-12px
					
		ul#tracks:empty::after
			content: 'CARRY ON'
			font-size:16px
			font-weight:400
			letter-spacing:+4px
			text-align:center
			color:#DDD
			text-shadow:-1px -1px #AAA
			width:100%
			height:30px
			line-height:30px
			position:relative
			top:-32px
			
		ul#tracks
			list-style:none
			width:auto
			height:100%
			position:absolute
			top:38px
			right:0
			bottom:0
			left:0
			margin:0
			padding:0
			counter-reset:track
			text-align: left
			padding-bottom:150px
			
			li
				display:block
				width:100%
				height:50px
				margin:0
				padding:10px 0
				background: url(/assets/img/record.png) no-repeat 10px 10px
				background-color: #F6F6F6
				background-size: auto 50px
				border-bottom:solid 1px #FFF
				box-shadow: inset 0 -1px #DDD
				font-family:'Oswald',Arial,Helvetica,sans-serif
				text-transform:uppercase
				color:#666
				line-height:24px
				font-size:18px
				white-space:nowrap
				text-overflow:ellipsis
				overflow:hidden
				cursor:default
				counter-increment: track
			
				span
					font-weight:200
					margin-left:75px
					color:#666
			
				a, a:hover, a:visited, a:active
					color:#49AFCD
					text-decoration:none
					cursor:default
					margin-left:75px
					
			li:after
				content: counter(track)
				font-size:34px
				color:#DDD
				text-shadow:-1px -1px #BBB
				float:right
				position:relative
				top:-12px
				margin-right:10px
				z-index:0
		
			li:nth-of-type(2n)
				background-color:#EEE
				
			li:nth-of-type(2)
				margin-top:380px
				border-top:solid 5px #DDD
				
			li:first-of-type
				background-color: transparent
				background-size: auto 100%
				background-position: top right
				display:block
				width:auto 
				position:absolute
				top:0
				right:0
				left:0
				height:170px
				padding:10px 0
				border-bottom:solid 1px #FFF
				box-shadow: inset 0 -1px #DDD
				z-index:100
				
				span, a
					margin-left:15px
				
				span:first-of-type::after
					content:'\A\A text "#demo skip" to jump to the next track \A text "#demo pause" to freeze the current track \A text "#demo play" to resume playing current track'
					white-space:pre
					text-transform:none
					width:100%
					font-size:16px
					letter-spacing:+1px
					color:#666
					text-shadow: none
					position:relative
					left:15px	
				
			li:last-of-type
				margin-bottom:100px

